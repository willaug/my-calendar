<%- include('partials/header.ejs') %>

<tr>
  <td>
    <h1 class="main__title">
      <%= translatedData.CREATE.HELLO %>, 
      <%= account.name.split(/\s/)[0] %>!
    </h1>
    <br>
  </td>
</tr>
<tr class="main__description">
  <td>
    <p>
      <%= translatedData.CREATE.DESCRIPTION %> 
      <a href="<%= process.env.CLIENT_PASSWORD_RESET_URL %>/<%= passwordReset.token %>" target="_blank" rel="noopener noreferrer">
        <%= translatedData.CREATE.ON_THIS_LINK %></a>.
      <%= translatedData.CREATE.OBSERVATION %>
      <b>
        <%= process.env.PASSWORD_RESET_EXPIRES_AT_IN_HOURS || 2 %>
        <%= translatedData.CREATE.HOURS %></b>.
    </p>
    <br>
    <br>
  </td>
</tr>
<tr class="main__solicited-by">
  <td>
    <h2>
      <%= translatedData.CREATE.SOLICITED_BY.DESCRIPTION %>
    </h2>
    <br>
    <p>
      <b>IP:</b>
      &nbsp;<%= passwordReset.solicited_by.requester.ip || translatedData.CREATE.UNKNOWN %>;
    </p>
    <p>
      <b><%= translatedData.CREATE.SOLICITED_BY.LOCATION %></b>
      &nbsp;<%= passwordReset.solicited_by_requester_location || translatedData.CREATE.UNKNOWN %>;
    </p>
    <p>
      <b><%= translatedData.CREATE.SOLICITED_BY.DEVICE %></b>
      &nbsp;<%= passwordReset.solicited_by_requester_device || translatedData.CREATE.UNKNOWN %>.
    </p>
    <br>
    <br>
    <br>
  </td>
</tr>

<%- include('partials/footer.ejs', { translatedData }) %>
